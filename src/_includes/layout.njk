<!DOCTYPE html>
<html lang="it">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>

  <header class="site-header">
    <div class="container header-inner">
      <h1 class="logo"><a href="/">{{ title }}</a></h1>
      <button class="nav-toggle" aria-label="Apri menu">
        <span class="hamburger"></span>
      </button>
      <nav class="main-nav" id="mainNav">
        <a href="/">Home</a>
        <a href="/events/">Eventi</a>
        <a href="/pages/chi-siamo.html">Chi Siamo</a>
        <a href="/admin/">Admin</a>
      </nav>
    </div>
  </header>

  <main class="container">
    {{ content | safe }}
  </main>

  <footer class="site-footer">
    <div class="container">
      <p>&copy; 2025 Starlike</p>
    </div>
  </footer>

  <!-- Icone social flottanti -->
  <a href="https://wa.me/393881154363" class="floating-icon whatsapp" target="_blank" aria-label="WhatsApp">
    <img src="/images/uploads/whatsapp.svg" alt="WhatsApp">
  </a>
  <a href="https://www.instagram.com/danielestarlike" class="floating-icon instagram" target="_blank" aria-label="Instagram">
    <img src="/images/uploads/instagram.svg" alt="Instagram">
  </a>

  <!-- Toggle del menu responsive -->
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const toggle = document.querySelector(".nav-toggle");
      const nav = document.getElementById("mainNav");

      toggle.addEventListener("click", () => {
        nav.classList.toggle("nav-open");
      });
    });
  </script>
</body>
</html>
